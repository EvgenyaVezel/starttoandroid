<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/proba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#1A52C1"
        android:text="@string/probapera"
        android:textColor="#F3F3F3" />

    <Button
        android:id="@+id/btn_clc"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/click_me"
        android:textColor="@color/design_default_color_primary_dark"
        app:backgroundTint="@color/teal_200" />

    <EditText
        android:id="@+id/edit_some"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:autofillHints="username"
        android:inputType="text"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

    <Switch
        android:id="@+id/switch_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Переключи меня!"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/check_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:fontFamily="sans-serif-black"
        android:text="@string/super_android_dev"
        android:textSize="18sp" />

    <ToggleButton
        android:id="@+id/btn_togle_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#960235"
        android:checked="false"
        android:textColor="#520365"
        android:textOff="i'm off"
        android:textOn="i'm on" />


</LinearLayout>

