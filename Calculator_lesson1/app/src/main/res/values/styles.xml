<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="calculator_button_style">
    <item name="android:textStyle" > bold </item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="calculator_button_style.button_style_land">
        <item name="strokeColor">@color/stroke_color_land</item>
    </style>

    <style name="text_view_style_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/textsize_text_view</item>
        <item name="android:background">@color/text_view_color</item>
        <item name="android:gravity">right</item>

    </style>
    <style name="switch_style">
        <item name="trackTint">@color/thistle</item>
        <item name="thumbTint">@color/purple_200</item>
        <item name="android:textOn">@string/switch_light</item>
        <item name="android:textOff">@string/switch_dark</item>
        <item name="showText">true</item>
        <item name="android:textSize">@dimen/textsize_switch</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>

    </style>
</resources>